<!DOCTYPE html>
<html lang="en" data-theme="dim">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Send Notification | Notification App</title>
  <link rel="stylesheet" href="/css/output.css" />
</head>
<body class="bg-base-200 min-h-screen flex flex-col">

  <!-- ‚úÖ Navbar -->
  <div class="navbar bg-base-100 shadow px-4 sm:px-6 md:px-10">
    <div class="flex-1">
      <a href="/" class="text-xl sm:text-2xl font-bold text-primary flex items-center gap-2">
        üì¨ Notification App
      </a>
    </div>
    <div class="flex-none space-x-2">
      <a href="/dashboard" class="btn btn-sm sm:btn-md btn-ghost text-sm sm:text-base">üè† Home</a>
      <a href="/dashboard/send" class="btn btn-sm sm:btn-md btn-ghost text-sm sm:text-base">üì® Send</a>
      <a href="/logout" class="btn btn-sm sm:btn-md btn-error text-sm sm:text-base">Logout</a>
    </div>
  </div>

  <!-- ‚úÖ Centered Form Section -->
  <main class="flex-grow flex items-center justify-center px-4 sm:px-6">
    <div class="w-full max-w-xl bg-base-100 p-6 sm:p-8 rounded-xl shadow space-y-6">

      <h2 class="text-2xl sm:text-3xl font-bold text-center flex items-center justify-center gap-2">
        üì® Send Notification
      </h2>

      <form action="/notifications/create" method="POST" class="space-y-6">
        <!-- Title -->
        <div>
          <label class="label font-semibold text-base sm:text-lg">Title</label>
          <input 
            type="text" 
            name="title" 
            placeholder="Enter notification title" 
            class="input input-bordered w-full text-sm sm:text-base" 
            required 
          />
        </div>

        <!-- Message -->
        <div>
          <label class="label font-semibold text-base sm:text-lg">Message</label>
          <textarea 
            name="message" 
            rows="4" 
            placeholder="Type your message here..."
            class="textarea textarea-bordered w-full text-sm sm:text-base resize-none" 
            required
          ></textarea>
        </div>

        <!-- Priority -->
        <div>
          <label class="label font-semibold text-base sm:text-lg">Priority</label>
          <select name="priority" class="select select-bordered w-full text-sm sm:text-base" required>
            <option value="">Select priority</option>
            <option value="Normal">Normal</option>
            <option value="High">High</option>
          </select>
        </div>

        <!-- Submit -->
        <div class="text-right">
          <button type="submit" class="btn btn-primary px-6 text-sm sm:text-base w-full sm:w-auto">
            üöÄ Send Notification
          </button>
        </div>
      </form>

    </div>
  </main>

</body>
</html>
