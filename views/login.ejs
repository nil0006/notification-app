<!DOCTYPE html>
<html lang="en" data-theme="dim">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Notification App</title>
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <body class="min-h-screen flex items-center justify-center bg-base-200">
    <!-- Login card -->
    <div class="card w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <h2 class="text-2xl font-bold text-center">Welcome Back ðŸ‘‹</h2>
        <p class="text-sm text-center text-base-content/60 mb-4">
          Login to your dashboard
        </p>
        <!-- Login form -->

        <form method="POST" action="/login" class="space-y-4">
          <!-- Email input -->
          <div class="form-control">
            <label class="label">
              <span class="label-text">Email</span>
            </label>
            <input
              type="email"
              name="email"
              placeholder="email@example.com"
              class="input input-bordered w-full"
              required
            />
          </div>
          <!-- Password input -->
          <div class="form-control">
            <label class="label">
              <span class="label-text">Password</span>
            </label>
            <input
              type="password"
              name="password"
              placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
              class="input input-bordered w-full"
              required
            />
          </div>
          <!-- Submit button -->
          <div class="form-control mt-6">
            <button class="btn btn-primary w-full">Login</button>
          </div>
        </form>
        <!-- Signup redirect -->
        <div class="divider">OR</div>
        <p class="text-sm text-center">
          Donâ€™t have an account?
          <a href="/signup" class="link link-primary">Sign up</a>
        </p>
      </div>
    </div>
    <!-- Error toast message (if login fails) -->
    <div id="toast-container" class="toast toast-top toast-end fixed z-50">
      <% if (error) { %>
      <div
        class="alert alert-error text-black shadow-lg animate-slide-in"
        id="error-toast"
      >
        <span><%= error %></span>
      </div>
      <% } %>
    </div>
  </body>
  <!-- Auto-hide toast message after 3 seconds -->
  <script>
    window.addEventListener("DOMContentLoaded", () => {
      const toast = document.getElementById("error-toast");
      if (toast) {
        setTimeout(() => {
          toast.style.display = "none";
        }, 3000); // 3 seconds
      }
    });
  </script>
</html>
